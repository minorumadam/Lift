<?xml version='1.0' encoding='utf-8'?>
<widget id="com.raiselearning.lift" version="0.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LIFT</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="https://au1.caspio.com" />
    <access origin="https://raiselearning.com.au" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="res/ios/icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/ios/icon-60.png" width="60" height="60" />
        <icon src="res/ios/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/ios/icon-76.png" width="76" height="76" />
        <icon src="res/ios/icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="res/ios/icon-40.png" width="40" height="40" />
        <icon src="res/ios/icon-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="res/ios/icon.png" width="57" height="57" />
        <icon src="res/ios/icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/ios/icon-72.png" width="72" height="72" />
        <icon src="res/ios/icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/ios/icon-small.png" width="29" height="29" />
        <icon src="res/ios/icon-small@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <splash src="res/screen/ios/Default.png"/>
        <splash src="res/screen/ios/Default@2x.png" width="640" height="960"/>
        <splash src="res/screen/ios/Default-Portrait.png" width="768" height="1024"/>
        <splash src="res/screen/ios/Default-Portrait@2x.png" width="1536" height="2048"/>
        <splash src="res/screen/ios/Default-Landscape.png" width="1024" height="768"/>
        <splash src="res/screen/ios/Default-Landscape@2x.png" width="2048" height="1536"/>
        <splash src="res/screen/ios/Default-568h@2x.png" width="640" height="1136"/>
    </platform>
    <platform name="android">
        <icon src="res/android/drawable-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="res/android/drawable-ldpi/ic_launcher.png" density="ldpi" />
        <icon src="res/android/drawable-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="res/android/drawable-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="res/android/drawable-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="res/android/drawable-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
        <splash src="res/screen/android/images/res-long-land-hdpi/default.png" density="land-hdpi" />
        <splash src="res/screen/android/images/res-long-land-ldpi/default.png" density="land-ldpi" />
        <splash src="res/screen/android/images/res-long-land-mdpi/default.png" density="land-mdpi" />
        <splash src="res/screen/android/images/res-long-land-xhdpi/default.png" density="land-xhdpi" />
        <splash src="res/screen/android/images/res-long-land-xxhdpi/default.png" density="land-xxhdpi" />
        <splash src="res/screen/android/images/res-long-land-xxxhdpi/default.png" density="land-xxxhdpi" />
        <splash src="res/screen/android/images/res-long-port-hdpi/default.png" density="port-hdpi" />
        <splash src="res/screen/android/images/res-long-port-ldpi/default.png" density="port-ldpi" />
        <splash src="res/screen/android/images/res-long-port-mdpi/default.png" density="port-mdpi" />
        <splash src="res/screen/android/images/res-long-port-xhdpi/default.png" density="port-xhdpi" />
        <splash src="res/screen/android/images/res-long-port-xxhdpi/default.png" density="port-xxhdpi" />
        <splash src="res/screen/android/images/res-long-port-xxxhdpi/default.png" density="port-xxxhdpi" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="FadeSplashScreen" value="true"/>
    <preference name="FadeSplashScreenDuration" value="10"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <plugin name="SplashScreen" value="CDVSplashScreen" />
    <preference name="BackupWebStorage" value="local"/>
    <preference name="EnableViewportScale" value="true"/>
    <feature name="InAppBrowser">
        <param name="ios-package" value="CDVInAppBrowser" />
    </feature>
    <feature name="PushPlugin">
        <param name="android-package" value="com.plugin.gcm.PushPlugin" />
    </feature>
</widget>
